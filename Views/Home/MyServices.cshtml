@model MyBlog2021N.Models.ViewModel.ServiceViewModel
@{
    ViewBag.Title = "Teknik Beceriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Header{
    @Html.Partial("_Header", "Home")
}
@section Footer{
    @Html.Partial("_Footer")
}
<section class="ftco-section">
    <div class="container">
        <div class="row">
            @foreach (var services in Model.Services)
            {

                <div class="col-md-4 d-flex align-self-stretch ftco-animate fadeInUp ftco-animated">
                    <div class="media block-6 services py-4 d-block">
                        <div class="d-flex justify-content-start">
                            <div class="icon d-flex align-items-center justify-content-center">
                                <img src="@services.IconURL" width="100" height="100" />
                            </div>
                        </div>
                        <div class="media-body p-2 mt-2">
                            <h3 class="heading mb-3">@services.Title</h3>
                            <p>@services.Description</p>
                        </div>
                    </div>
                </div>
            }

        </div>

    </div>
</section>
