@model MyBlog2021N.Models.ViewModel.AsideViewModel
@{
    ViewBag.Title = "Hakkımda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Footer{
    @Html.Partial("_Footer")
}

<section class="ftco-section-no-padding bg-light">
    <div class="hero-wrap">
        <div class="overlay"></div>
        <div class="d-flex">
            @foreach (var item in Model.Abouts)
            {

                <div class="author-image text img p-md-5" style="background-image: url(@item.ImageURL);">

                </div>
                <div class="author-info text p-4 p-md-5 mt-5 mb-5">
                    <div class="desc">
                        <span class="subheading">Tanıştığıma memnun oldum</span>
                        <h1 class="big-letter">@item.HideName</h1>
                        <h1 class="mb-4"><span>@item.Title</span></h1>
                        <p class="mb-4">@item.SubTitle</p>
                        @foreach (var user in Model.Users)
                        {

                            <h3 class="signature h1">@user.UserDetails.NameSurname</h3>
                        }
                        <ul class="ftco-social mt-3">
                            <li class="ftco-animate fadeInUp ftco-animated"><a href="@item.TwitterURL"><span class="icon-twitter"></span></a></li>
                            <li class="ftco-animate fadeInUp ftco-animated"><a href="@item.InstagramURL"><span class="icon-facebook"></span></a></li>
                            <li class="ftco-animate fadeInUp ftco-animated"><a href="@item.InstagramURL"><span class="icon-instagram"></span></a></li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
