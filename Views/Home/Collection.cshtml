@model MyBlog2021N.Models.ViewModel.CollectionViewModel
@{
    ViewBag.Title = "Galeri";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 0;
}

@section Header{
    @Html.Partial("_Header", "Home")
}
@section Footer{
    @Html.Partial("_Footer")
}

    <section class="ftco-section-3 col-lg-12">
        
                <div class="col-lg-2 float-xl-right">
                    <iframe src="https://open.spotify.com/embed/playlist/1X5pdDME9WPPwKjeCTkPhk" width="233" height="550" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
                </div>
        <div class="photograhy">
            <div class="row">
                @foreach (var collections in Model.Collections)
                {
                    if (counter <= 6)
                    {
                        <div class="col-sm-3 ftco-animate fadeInUp ftco-animated">
                            <a href="@collections.ImageURL" class="photography-entry img image-popup d-flex justify-content-start align-items-end" style="background-image: url(@collections.ImageURL);">
                                <div class="overlay"></div>
                                <div class="text ml-4 mb-4">
                                    <h3>@collections.Name</h3>
                                    <span class="tag">@collections.CollectionCategories.Name</span>
                                </div>
                            </a>
                        </div>
                        counter++;
                    }
                    else
                    {
                        <div class="col-sm-3 ftco-animate">
                            <a href="@collections.ImageURL" class="photography-entry img image-popup d-flex justify-content-start align-items-end" style="background-image: url(@collections.ImageURL);">
                                <div class="overlay"></div>
                                <div class="text ml-4 mb-4">
                                    <h3>@collections.Name</h3>
                                    <span class="tag">@collections.CollectionCategories.Name</span>
                                </div>
                            </a>
                        </div>
                    }
                }
                @*<-->spotify</-->*@
            </div>
        </div>
    </section>


