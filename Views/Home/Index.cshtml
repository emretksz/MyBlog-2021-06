@model MyBlog2021N.Models.ViewModel.IndexViewModel
@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Footer{
    @Html.Partial("_Footer")
}

<section class="ftco-section-no-padding bg-light">
    <div class="hero-wrap">
        <div class="overlay"></div>
        <div class="d-flex align-items-center js-fullheight">
            @foreach (var abouts in Model.Abouts)
            {

                <div class="author-image text img d-flex">
                    <section class="home-slider js-fullheight owl-carousel">
                        <div class="slider-item js-fullheight" style="background-image: url(@abouts.ImageURL);">
                        </div>

                    </section>
                </div>
                <div class="author-info text p-3 p-md-5">
                    <div class="desc">
                        <h1 class="big-letter">@abouts.HideName</h1>
                        <h1 class="mb-4"><span>@abouts.Title</span> ></h1>
                        <p class="mb-4">@abouts.SubTitle</p>
                        <h3 class="signature h1">@abouts.HideName</h3>
                        <ul class="ftco-social mt-3">
                            <li class="ftco-animate"><a href="@abouts.TwitterURL"><span class="icon-twitter"></span></a></li>
                            <li class="ftco-animate"><a href="@abouts.InstagramURL"><span class="icon-facebook"></span></a></li>
                            <li class="ftco-animate"><a href="@abouts.InstagramURL"><span class="icon-instagram"></span></a></li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</section>


